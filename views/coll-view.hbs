<div class="col-md-10 col-lg-10">
    <ol class="breadcrumb">
        <li><a href="{{app_context}}/">{{__ "Home"}}</a></li>
        <li><a href="{{app_context}}/{{conn_name}}">{{conn_name}}</a>&nbsp;({{__ "connection"}})</li>
        <li><a href="{{app_context}}/{{conn_name}}/{{db_name}}">{{db_name}}</a>&nbsp;({{__ "database"}})</li>
        <li><a href="{{app_context}}/{{conn_name}}/{{db_name}}/{{coll_name}}/view">{{coll_name}}</a>&nbsp;({{__ "collection"}})</li>
    </ol>
    <div class="row">
        <div class="col-lg-12 no-side-pad">
            <div class="col-sm-12 col-md-4 col-lg-4 pad-bottom">
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <a class="btn btn-success btn-sm" href="{{app_context}}/{{conn_name}}/{{db_name}}/{{coll_name}}/new">{{__ "New document"}}</a>
                    <a class="btn btn-info btn-sm" href="{{app_context}}/{{conn_name}}/{{db_name}}/{{coll_name}}/indexes">{{__ "Manage indexes"}}</a>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5 pad-bottom">
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <a type="button" class="btn btn-warning btn-sm action_button" data-toggle="modal" data-target="#searchModal">{{__ "Simple search"}}</a>
                    <a type="button" class="btn btn-primary btn-sm" id="btnqueryDocuments" data-toggle="modal" data-target="#queryDocuments">{{__ "Query documents"}}</a>
                    <a type="button" class="btn btn-danger btn-sm action_button" id="searchReset">{{__ "Reset"}}</a>
                </div>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3 pad-bottom text-center">
                <div class="recordCount"><strong>{{__ "Total records"}}:</strong> <span id="recordCount">0</span></div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div id="doc_load_placeholder" class="col-lg-12"><h3 class="text-center">{{__ "Finding docs"}} <i class="fa fa-spinner fa-spin"></i></h3></div>
            <div id="doc_none_found" class="col-lg-12 hidden"><h3 class="text-center">{{__ "No documents found"}}</h3></div>
            <div id="coll_docs"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-10">
            <div id="pager" class="text-center pagination-sm"></div>
        </div>
    </div>
    <input type="hidden" id="page_num" value="{{page_num}}">
    <input type="hidden" id="key_val" value="{{key_val}}">
    <input type="hidden" id="value_val" value="{{value_val}}">
</div>
